{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "freeswitch-logs",
      "host": {
        "sourcePath": "/var/log/containers/freeswitch"
      }
    },
    {
      "name": "freeswitch-storage",
      "host": {
        "sourcePath": "/var/cache/freeswitch/storage/http_file_cache"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "freeswitch",
      "image": "dwilkie/freeswitch-rayo",
      "essential": true,
      "memory": 995,
      "mountPoints": [
        {
          "sourceVolume": "freeswitch-logs",
          "containerPath": "/var/log/freeswitch"
        },
        {
          "sourceVolume": "freeswitch-storage",
          "containerPath": "/var/lib/freeswitch/storage/http_file_cache"
        }
      ],
      "portMappings": [
        {
          "hostPort": 5222,
          "containerPort": 5222,
          "protocol": "tcp"
        },
        {
          "hostPort": 5060,
          "containerPort": 5060,
          "protocol": "udp"
        }
      ],
      "environment": [
        {
          "name": "SECRETS_BUCKET_NAME",
          "value": "somlengsecrets"
        },
        {
          "name": "FREESWITCH_CONF_DIR",
          "value": "freeswitch/conf"
        }
      ]
    }
  ]
}
